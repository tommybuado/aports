# Contributor: Tommy Buado <tommy@thinkpad.local>
# Maintainer: Tommy Buado <tommy@thinkpad.local>
pkgname=mono-gtk-theme
pkgver=20240702
pkgrel=0
pkgdesc="A Mono Theme for GNOME"
url="https://github.com/witalihirsch/Mono-gtk-theme"
arch="noarch"
license="GPL-3.0-only"
options="!check" # no test suite
source="$pkgname-v$pkgver.tar.gz LICENSE"

package() {
	install -Dm644 "$srcdir"/LICENSE -t "$pkgdir"/usr/share/licenses/$pkgname/

	mkdir -p "$pkgdir"/usr/share/themes

	cp -rf "$srcdir"/Mono "$pkgdir"/usr/share/themes/Mono
	cp -rf "$srcdir"/Mono-Dark "$pkgdir"/usr/share/themes/Mono-Dark
}

sha512sums="
