# Contributor: Tommy Buado <tommy@thinkpad.local>
# Maintainer: Tommy Buado <tommy@thinkpad.local>
pkgname=font-roboto
pkgver=20240702
pkgrel=0
pkgdesc="The Roboto Font Family from Google"
url="https://fonts.google.com/"
arch="noarch"
license="Apache-2.0"
depends="fontconfig mkfontscale"
options="!check" # no test suite
source="$pkgname-v$pkgver.tar.gz 45-roboto.conf LICENSE"

package() {
	install -Dm644 "$srcdir"/Roboto/*.ttf -t "$pkgdir"/usr/share/fonts/roboto/
	install -Dm644 "$srcdir"/LICENSE -t "$pkgdir"/usr/share/licenses/$pkgname/

	cd "$pkgdir"

	install -Dm644 "$srcdir"/45-roboto.conf -t etc/fonts/conf.avail/
	mkdir -p etc/fonts/conf.d
	ln -s ../conf.avail/45-roboto.conf etc/fonts/conf.d/
}

